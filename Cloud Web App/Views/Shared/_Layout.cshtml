<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cloud_Web_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cloud_Web_App.styles.css" asp-append-version="true" />
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Poppins'>
</head>
<body>

    <header>
        <a class="logo" asp-controller="Home" asp-action="Home">ABC Retail</a>
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Home">Home</a>
            <a asp-controller="Home" asp-action="Customer">Customers</a>
            <a asp-controller="Home" asp-action="Product">Products</a>
            <a asp-controller="Home" asp-action="Order">Orders</a>
            <a asp-controller="Home" asp-action="Contract">Contracts</a>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer> &copy; 2024 - Cloud Web App </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
